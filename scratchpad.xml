<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:tab id="tabScratchpad" skin="docktab" visible="false">
        <a:page id="scratchpad0" caption="Scratchpad 1">
            <a:vbox anchors="0 0 0 0">
                <a:toolbar>
                    <a:bar border="0 0 1 0">
                        <a:button
                          caption  = "Add Scratchpad" 
                          tooltip  = "Add a new scratchpad tab"
                          onclick  = "
                            require('ext/scratchpad/scratchpad').addTab()
                          " />
                    </a:bar>
                </a:toolbar>
                <a:textarea
                    id="scratchpad0Code"
                    flex="1"
                    realtime="true"
                    border="0"
                    showprintmargin="false"
                    printmargincolumn="0"
                    width="100%"
                    height="100%" />
                </a:vbox>
        </a:page>
        <a:page id="scratchpadControls" caption="Scratchpad Controls">
            <a:button id="scratchpadAdd">Add New Pad</a:button>
        </a:page>
    </a:tab>
</a:application>