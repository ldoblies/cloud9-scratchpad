<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:window
        id = "scratchpadWindow"
        title = "Scratchpad"
        center = "true"
        modal = "false"
        buttons = "close"
        kbclose = "true"
        width = "800"
        height = "500">
        
        <a:tab id="scratchpadTabs" height="400">
            <a:page id="scratchpad1" caption="Scratchpad 1">
                <a:codeeditor
                    id="scratchpad1Code"
                    flex="1"
                    realtime="true"
                    border="0"
                    showprintmargin="false"
                    printmargincolumn="0"
                    width="780"
                    height="400" />
